Connect-AzAccount

$sp = New-AzADServicePrincipal -DisplayName "service_principal_name" -Role "Contributor"

Get-AzADServicePrincipal -DisplayNameBeginsWith "srvAzTerraform"

Get-AzSubscription

$sp.AppId

$sp.PasswordCredentials.SecretText

terraform init

